@model Branch

<style>
    .input-validation-error {
        border-color: red;
    }
</style>

<script src="~/vendor/jquery/jquery.js"></script>

<script type="text/javascript">
    $("body").on("submit", "#idForm", function () {
        return confirm("Do you want to submit?");
    });
</script>
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert('@ViewBag.Message');
            };
    </script>
}
<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Add New Branch</h1>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <form class="user" method="post" id="idForm">

                            <div class="form-group">
                                <label for="usr">Bank </label>
                                <select asp-for="BankId"
                                        class="form-control"
                                        asp-items="@(new SelectList(@ViewBag.ListOfBank,"Id","BankName"))"></select>

                            </div>
                            <div class="form-group">
                                <label for="usr">Branch Title</label>
                                <input asp-for="BranchTitle" class="form-control form-control-user" id="idBranchTitle" />
                                <span asp-validation-for="BranchTitle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="usr">Branch Address</label>
                                @*<input asp-for="BranchAddress" class="form-control form-control-user" id="idBranchAddress" />*@
                                <textarea asp-for="BranchAddress" class="form-control form-control-user" rows="4" cols="50" id="idBranchAddress">                   
                                </textarea>
                                <span asp-validation-for="BranchAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="usr">Contact No.</label>
                                <input asp-for="ContactNo" class="form-control form-control-user" id="idContactNo" />
                                <span asp-validation-for="ContactNo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="usr">Branch Manager.</label>
                                <input asp-for="BranchManager" class="form-control form-control-user" id="idBranchManager" />
                                <span asp-validation-for="BranchManager" class="text-danger"></span>
                            </div>
                            @*<div class="form-group">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                                            @if (ViewBag.SelectedValue != null)
                                            {
                                                <text>Selected Country ID: </text> @ViewBag.ListOfBank;
                                            }
                                        </div>
                                    </div>
                                </div>*@
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

